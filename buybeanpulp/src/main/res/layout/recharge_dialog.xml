<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/progress_bg"
    android:gravity="center_horizontal"
    android:alpha="0.6"
    >

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="@dimen/dim60"
        android:layout_height="@dimen/dim60"
        android:layout_gravity="center"
        android:background="@null"
        android:indeterminateDrawable="@anim/custom_progress"
        android:indeterminateOnly="true" />
    <TextView
        android:layout_marginLeft="@dimen/dim50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bg_loading"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="加载中..."
        android:textColor="@color/white"
        android:textSize="@dimen/txt34" />
</LinearLayout>