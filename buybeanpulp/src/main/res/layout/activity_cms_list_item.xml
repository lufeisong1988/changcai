<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cms_list_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim40"
    android:paddingRight="@dimen/dim40"
    >

    <TextView
        android:id="@+id/tv_news_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/read_selector"
        android:textSize="@dimen/txt34"
        tools:text="近期点价采购盘支撑，基金净多仓ssssssss位" />

    <com.changcai.buyer.view.CustomFontTextView
        android:id="@+id/tv_news_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim6"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/membership_color"
        tools:text="USDA5月供需报告新旧豆美国库存均低于平均预" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim33"
        android:layout_marginTop="@dimen/dim16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_classify"
            android:layout_width="@dimen/dim96"
            android:layout_height="@dimen/dim24"
            tools:text="机构观点" />

        <ImageView
            android:id="@+id/iv_membership"
            android:layout_width="@dimen/dim42"
            android:layout_height="@dimen/dim24"
            android:layout_marginLeft="@dimen/dim6"
            android:layout_marginRight="@dimen/dim16" />

        <com.changcai.buyer.view.CustomFontTextView
            android:id="@+id/tv_time_desc"
            style="@style/cms_list_item_bottom_text"
            android:layout_width="match_parent"
            android:gravity="right"
            tools:text="09:30" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginTop="@dimen/dim30"
        android:background="@color/mischka" />

</LinearLayout>