<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/report_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim50"
        android:paddingTop="@dimen/dim50">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="@dimen/dim40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最新报价"
                android:textColor="@color/font_black"
                android:textSize="@dimen/txt36"
                />

            <com.changcai.buyer.view.CustomFontTextView
                android:layout_marginRight="@dimen/dim40"
                android:layout_centerVertical="true"
                android:id="@+id/tv_morePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/icon_information_more"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:text="更多报价"
                android:textColor="@color/graph_bottom_line"
                android:textSize="@dimen/txt26" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:layout_marginTop="@dimen/dim30"
            android:id="@+id/vp_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim222"></android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>