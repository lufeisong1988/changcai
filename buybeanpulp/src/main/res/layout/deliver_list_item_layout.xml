<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:id="@+id/ll_item_parent"
    android:orientation="vertical">

    <View style="@style/divide_line_all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dim81"
            android:layout_height="@dimen/dim57"
            tools:src="@drawable/icon_seller_initiated"
            android:src="@drawable/icon_seller_order_list" />

        <TextView
            android:id="@+id/tv_enter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim8"
            android:lines="1"
            android:layout_gravity="center_vertical"
            android:text="@string/about_app"
            android:textColor="@color/sticky_header_text_color"
            android:textSize="@dimen/txt30" />

        <TextView
            android:id="@+id/tv_status_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim20"
            android:layout_alignParentRight="true"
            android:ellipsize="middle"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:text="订单状态"
            android:textColor="@color/global_blue"
            android:textSize="@dimen/SmallTextSize"
            app:layout_widthPercent="35%"
            tools:text="待买家支付保证金" />
    </LinearLayout>

    <View
        style="@style/divide_line_all"
        android:layout_marginLeft="@dimen/dim20" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim20"
        android:paddingRight="@dimen/dim20"
        android:paddingBottom="@dimen/dim24"
        android:paddingTop="@dimen/dim24"
        >

        <TextView
            android:id="@+id/tv_price_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            app:layout_widthPercent="40%"

            tools:text="sdfsdfsdfsdfsdfsdfsdfssdf" />

        <TextView
            android:id="@+id/tv_time_pick_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price_info"
            android:layout_marginTop="@dimen/dim16"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            tools:text="2017-03-22提货100吨" />

        <TextView
            android:id="@+id/tv_should_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_pick_count"
            android:layout_marginTop="@dimen/dim16"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            tools:text="应付金额：150,000.00元" />
        <TextView
            android:id="@+id/tv_already_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_pick_count"
            android:layout_marginTop="@dimen/dim16"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_toRightOf="@+id/tv_should_pay"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            tools:text="应付金额：150,000.00元" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_line"
        style="@style/divide_line_all"
        android:layout_marginLeft="@dimen/dim20"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/tv_regionAndLocation"
        android:id="@+id/rl_buttons_status"
        >

        <TextView
            android:id="@+id/tv_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dim20"
            android:layout_marginRight="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:background="@drawable/order_status_bg"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/dim200"
            android:paddingTop="@dimen/common_margin_5"
            android:paddingBottom="@dimen/common_dimen_5"
            android:paddingLeft="@dimen/dim20"
            android:paddingRight="@dimen/dim20"
            android:textColor="@color/global_text_orange"
            android:textSize="@dimen/txt26"
            tools:text="签署合同" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim1"
        android:background="@color/global_text_gray2" />


</LinearLayout>