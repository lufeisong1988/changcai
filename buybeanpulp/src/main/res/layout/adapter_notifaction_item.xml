<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim40"
    android:paddingRight="@dimen/dim40"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:background="@android:color/white"
        android:id="@+id/lay_root"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dim140">
    <ImageView
        app:layout_constraintTop_toTopOf="@+id/lay_root"
        app:layout_constraintBottom_toBottomOf="@+id/lay_root"
        android:id="@+id/iv_nt_icon"
        android:layout_width="@dimen/dim68"
        android:layout_height="@dimen/dim68"
         />
    <ImageView
        android:id="@+id/iv_dot"
        android:layout_width="@dimen/dim20"
        android:layout_height="@dimen/dim20"
        android:background="@drawable/dot_red"
        app:layout_constraintRight_toRightOf="@+id/iv_nt_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_nt_icon" />

    <TextView

        android:id="@+id/tv_nt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:text="会员顾问"
        android:textSize="@dimen/txt32"
        android:textColor="@color/actionsheet_black"
        app:layout_constraintLeft_toRightOf="@+id/iv_nt_icon"
        app:layout_constraintTop_toTopOf="@+id/lay_root"
        android:layout_marginTop="@dimen/dim24"
        />

    <ImageView
        android:id="@+id/iv_gurad"
        android:layout_width="@dimen/dim109"
        android:layout_height="@dimen/dim28"
        android:layout_marginLeft="@dimen/dim6"
        android:src="@drawable/icon_xzchyys"
        app:layout_constraintLeft_toRightOf="@+id/tv_nt_name"
        app:layout_constraintTop_toTopOf="@+id/iv_nt_icon"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:text="本周可以点价么?"
        android:textColor="@color/storm_gray"
        android:textSize="@dimen/txt24"
        app:layout_constraintBottom_toBottomOf="@+id/lay_root"
        app:layout_constraintLeft_toRightOf="@+id/iv_nt_icon"
        android:layout_marginBottom="@dimen/dim30" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/font_gray"
        android:textSize="@dimen/txt24"
        app:layout_constraintRight_toRightOf="@+id/lay_root"
        app:layout_constraintTop_toTopOf="@+id/tv_nt_name" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_E8E8E8"
        android:layout_height="@dimen/dim1"></LinearLayout>
</LinearLayout>

