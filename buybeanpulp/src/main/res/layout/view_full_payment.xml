<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/viewRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



                <com.changcai.buyer.view.countdowntextview.CountDownTextView
                    android:id="@+id/tv_count_down"
                    style="@style/style1"
                    android:background="@color/orange_details_info2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim60"
                    android:gravity="center"
                    tools:text="06时00分00秒" />




            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/global_text_gray2" />

            <LinearLayout style="@style/linear_layout_pay">

                <com.changcai.buyer.view.CustomFontTextView
                    style="@style/left_text_style_pay1"
                    android:text="@string/tv_pick_up_site" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_pick_up_site"
                    style="@style/quoted_price_middleSize_text_style.full_pay"
                    tools:text="上海 雪姨工程" />
            </LinearLayout>

            <View style="@style/view_divider" />


            <LinearLayout style="@style/linear_layout_pay">

                <com.changcai.buyer.view.CustomFontTextView
                    style="@style/left_text_style_pay1"
                    android:text="@string/string_seller" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_company_name"
                    style="@style/quoted_price_middleSize_text_style.full_pay"
                    tools:text="喜羊羊集团" />
            </LinearLayout>

            <View style="@style/view_divider" />

            <LinearLayout style="@style/linear_layout_pay">

                <com.changcai.buyer.view.CustomFontTextView
                    style="@style/left_text_style_pay1"
                    android:text="@string/tv_units1" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_unit"
                    style="@style/quoted_price_middleSize_text_style.full_pay"
                    tools:text="3200" />
            </LinearLayout>


            <View style="@style/view_divider" />

            <LinearLayout style="@style/linear_layout_pay">

                <com.changcai.buyer.view.CustomFontTextView
                    style="@style/left_text_style_pay1"
                    android:text="购买吨数" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_ton_number"
                    style="@style/quoted_price_middleSize_text_style.full_pay"
                    tools:text="3200" />
            </LinearLayout>

            <View style="@style/view_divider" />

            <LinearLayout style="@style/linear_layout_pay">

                <com.changcai.buyer.view.CustomFontTextView
                    style="@style/left_text_style_pay1"
                    android:text="@string/total_amount1" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_total_amount"
                    style="@style/quoted_price_middleSize_text_style.full_pay"
                    android:textColor="@color/flamingo"
                    tools:text="3200" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/global_text_gray2" />


            <View
                android:layout_marginTop="@dimen/dim40"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/global_text_gray2" />

            <LinearLayout
                style="@style/linear_layout_pay"
              >



                <com.changcai.buyer.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pick_up_time2"
                    android:textColor="@color/sticky_header_text_color"
                    android:textSize="@dimen/txt34" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_pick_up_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:text="sdfsdfsdsdf"
                    android:paddingRight="@dimen/dim10"
                    android:textColor="@color/sticky_header_text_color"
                    android:textSize="@dimen/txt34" />

                <ImageView
                    android:id="@+id/iv_more"
                    android:layout_width="@dimen/dim26"
                    android:layout_height="@dimen/dim26"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_inline_rgt" />
            </LinearLayout>

            <View
                style="@style/view_divider"
                android:layout_marginLeft="@dimen/dim0"
                android:layout_marginRight="@dimen/dim0"
                />


            <LinearLayout
                style="@style/linear_layout_pay"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/recharge_money_password"
                    android:textColor="@color/global_text_gray3" />

                <com.changcai.buyer.view.ClearEditText
                    android:id="@+id/tv_pay_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/please_input_recharge_money_password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/global_text_gray2"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/txt28" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dim20"
                android:layout_marginTop="@dimen/dim20"
                android:text="@string/forget_recharge_money_password"
                android:textColor="@color/global_blue"
                android:textSize="@dimen/txt28"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim40"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dim40"
                android:paddingRight="@dimen/dim40">

                <com.changcai.buyer.view.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="平台账户余额："
                    android:textColorLink="@color/membership_color"
                    android:textSize="@dimen/txt30" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/ctv_platform_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/flamingo"
                    tools:text="￥200,000,000" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/ctv_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim20"
                    android:drawableRight="@drawable/icon_inline_rgt"
                    android:text="去充值"
                    android:textColor="@color/global_blue" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:background="@drawable/btn_shdo_blue110">

        <TextView
            android:id="@+id/tv_agree_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:gravity="center"
            android:text="@string/confirm_full_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/dim40" />
    </LinearLayout>
</RelativeLayout>



