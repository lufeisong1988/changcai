<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_title_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/color_E8E8E8"></LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim140"
            android:layout_marginLeft="@dimen/dim40"

            android:layout_marginRight="@dimen/dim40"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_vip_icon"
                android:layout_width="@dimen/dim68"
                android:layout_height="@dimen/dim68"
                android:src="@drawable/icon_new_adviser"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/iv_vip_dot"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:background="@drawable/dot_red"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/iv_vip_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_vip_icon" />

            <TextView

                android:id="@+id/iv_vip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginStart="@dimen/dim20"
                android:layout_marginTop="@dimen/dim24"
                android:text="会员顾问"
                android:textColor="@color/actionsheet_black"
                android:textSize="@dimen/txt32"
                app:layout_constraintLeft_toRightOf="@+id/iv_vip_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_vip_gurad"
                android:layout_width="@dimen/dim110"
                android:layout_height="@dimen/dim28"
                android:layout_marginLeft="@dimen/dim6"
                android:layout_marginStart="@dimen/dim6"
                android:src="@drawable/icon_xzchyys"
                app:layout_constraintLeft_toRightOf="@+id/iv_vip_name"
                app:layout_constraintTop_toTopOf="@+id/iv_vip_icon" />

            <TextView
                android:id="@+id/tv_vip_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginStart="@dimen/dim90"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/storm_gray"
                android:textSize="@dimen/txt24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/iv_vip_icon"
                app:layout_constraintLeft_toRightOf="@+id/iv_vip_icon"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_vip_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_gray"
                android:textSize="@dimen/txt24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_vip_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_E8E8E8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="8dp"></LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_team"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim140"
            android:layout_marginLeft="@dimen/dim40"

            android:layout_marginRight="@dimen/dim40"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_team_icon"
                android:layout_width="@dimen/dim64"
                android:layout_height="@dimen/dim64"
                android:src="@drawable/icon_new_union"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/iv_team_dot"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:background="@drawable/dot_red"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/iv_team_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_team_icon" />

            <TextView

                android:id="@+id/iv_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginStart="@dimen/dim20"
                android:layout_marginTop="@dimen/dim24"
                android:text="产业联盟"
                android:textColor="@color/actionsheet_black"
                android:textSize="@dimen/txt32"
                app:layout_constraintLeft_toRightOf="@+id/iv_team_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_team_gurad"
                android:layout_width="@dimen/dim110"
                android:layout_height="@dimen/dim28"
                android:layout_marginLeft="@dimen/dim6"
                android:layout_marginStart="@dimen/dim6"
                android:src="@drawable/icon_xzchyys"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/iv_team_name"
                app:layout_constraintTop_toTopOf="@+id/iv_team_icon" />

            <TextView
                android:id="@+id/tv_team_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginStart="@dimen/dim90"
                android:ellipsize="end"
                android:lines="1"
                android:text="联盟成员交流群"
                android:textColor="@color/storm_gray"
                android:textSize="@dimen/txt24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/iv_team_icon"
                app:layout_constraintLeft_toRightOf="@+id/iv_team_icon"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView

                android:id="@+id/tv_team_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/txt24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_team_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_E8E8E8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="8dp"></LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_consultant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim140"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_marginRight="@dimen/dim40"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_consultant_icon"
                android:layout_width="@dimen/dim68"
                android:layout_height="@dimen/dim68"
                android:src="@drawable/icon_new_answer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/iv_consultant_dot"
                android:layout_width="@dimen/dim20"
                android:layout_height="@dimen/dim20"
                android:background="@drawable/dot_red"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@+id/iv_consultant_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_consultant_icon" />

            <TextView

                android:id="@+id/tv_consultant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginStart="@dimen/dim20"
                android:layout_marginTop="@dimen/dim24"
                android:text="顾问答复"
                android:textColor="@color/actionsheet_black"
                android:textSize="@dimen/txt32"
                app:layout_constraintLeft_toRightOf="@+id/iv_consultant_icon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_consultant_gurad"
                android:layout_width="@dimen/dim110"
                android:layout_height="@dimen/dim28"
                android:layout_marginLeft="@dimen/dim6"
                android:layout_marginStart="@dimen/dim6"
                android:src="@drawable/icon_xzchyys"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/tv_consultant_name"
                app:layout_constraintTop_toTopOf="@+id/iv_consultant_icon" />

            <TextView
                android:id="@+id/tv_consultant_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_marginStart="@dimen/dim90"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/storm_gray"
                android:textSize="@dimen/txt24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@+id/iv_consultant_icon"
                app:layout_constraintLeft_toRightOf="@+id/iv_consultant_icon"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/tv_consultant_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/font_gray"
                android:textSize="@dimen/txt24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_consultant_name" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/color_E8E8E8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteX="8dp"></LinearLayout>
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <com.changcai.buyer.view.RotateDotsProgressView
        android:id="@+id/news_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:visibility="gone" />


</RelativeLayout>