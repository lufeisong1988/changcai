<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lily_white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim60"
        android:src="@drawable/appicon_186" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim41"
        android:textColor="@color/black"
        android:textSize="@dimen/txt34"
        tools:text="买豆粕 v1.5.28" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginTop="@dimen/dim60"
        android:background="@color/global_text_gray2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim180"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_click_delegate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_check_version"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim90"
                android:layout_marginLeft="@dimen/dim30"
                android:layout_marginRight="@dimen/dim34"
                android:layout_weight="1"
                android:drawableRight="@drawable/icon_update"
                android:gravity="center|left"
                android:text="@string/check_version"
                android:textColor="@color/black"
                android:textSize="@dimen/txt30" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dim20"
            android:background="@color/global_text_gray2" />

        <TextView
            android:id="@+id/tv_function_introduce"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim90"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="@string/function_introduce"
            android:drawableRight="@drawable/list_arrow"
            android:textColor="@color/black"
            android:textSize="@dimen/txt30" />
    </RelativeLayout>
</LinearLayout>