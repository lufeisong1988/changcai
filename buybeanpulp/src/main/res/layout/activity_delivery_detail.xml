                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28"
                        tools:text=" 汇福/ 43% / 50kg" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/dim20"
                    android:background="@color/global_text_gray2"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimen_45"
                    android:background="@color/white"
                    android:padding="@dimen/common_dimen_5">

                    <TextView
                        android:id="@+id/tv_delivery_time_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="提货日期"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/txt28" />

                    <TextView
                        android:id="@+id/tv_delivery_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/BasicTextSize"
                        tools:text="2016年05月13日" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim20"
                    android:background="@color/global_text_gray2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimen_45"
                    android:background="@color/white"
                    android:padding="@dimen/common_dimen_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
