                <RelativeLayout
                    android:id="@+id/rl_pay_way"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim92"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/common_dimen_5"
                    android:paddingRight="@dimen/common_dimen_5">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentTop="true"
                        android:background="#ddd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="付款方式"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/BasicTextSize" />


                    <TextView
                        android:id="@+id/tv_delivery_pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/flamingo"
                        android:textSize="@dimen/txt28"
                        tools:text="150,000.00" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#ddd" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dim20"
                    android:background="#ddd" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/common_dimen_45"
                    android:padding="@dimen/common_dimen_5">


                    <TextView
                        android:id="@+id/tv_standard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="运输信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28" />

                    <TextView
                        android:id="@+id/tv_no_transportation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:text="未填写"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/txt28"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_transportation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_standard"
                        android:layout_marginLeft="@dimen/dim20"
                        android:layout_marginTop="@dimen/dim20"
                        android:text="运输信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28"
                        tools:text="司机：张三，电话：15201871992，身份证：123456789012345678，车牌号：1111111"
                        tools:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ddd" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dim20"
                    android:background="#ddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim88"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tv_phone_icon"
                        android:layout_width="@dimen/dim156"
                        android:layout_height="@dimen/dim30"
                        android:background="@drawable/icon_call_seller"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/BasicTextSize" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ddd" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dim20"
                    android:background="#ddd" />

                <TextView
                    android:id="@+id/tv_check_my_order"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim88"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="查看订单详情"
                    android:textColor="@color/global_blue"
                    android:textSize="@dimen/BasicTextSize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#ddd" />

