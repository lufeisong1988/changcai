                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="提货单价(元)"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/txt28" />

                    <TextView
                        android:id="@+id/tv_delivery_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim20"
                    android:background="@color/global_text_gray2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_dimen_45"
                    android:background="@color/white"
                    android:padding="@dimen/common_dimen_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="提货数量(吨)"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/txt28" />


                    <TextView
                        android:id="@+id/tv_delivery_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/BasicTextSize"
                        tools:text="9.58" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim20"
                    android:background="@color/global_text_gray2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="@dimen/dim138"
                    android:padding="@dimen/common_dimen_5">

                    <TextView
                        android:id="@+id/tv_delivery_amount_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim20"
                        android:layout_marginTop="@dimen/dim20"
                        android:text="应付金额(元)"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/BasicTextSize" />

                    <TextView
                        android:id="@+id/tv_delivery_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:layout_marginTop="@dimen/dim20"
                        android:textColor="@color/flamingo"
                        android:textSize="@dimen/BasicTextSize"
                        tools:text="sdfsdfsdfsdfsdf" />

                    <TextView
                        android:id="@+id/tv_delivery_amount_deduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_delivery_amount"
                        android:layout_marginRight="@dimen/dim20"
                        android:layout_marginTop="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28"
                        tools:text="sdfsdfsdf" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim20"
                    android:background="@color/global_text_gray2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim92"
                    android:background="@color/white"
                    android:padding="@dimen/common_dimen_5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dim20"
                        android:text="已付金额(元)"
                        android:textColor="@color/global_text_gray"
                        android:textSize="@dimen/BasicTextSize" />


                    <TextView
                        android:id="@+id/tv_delivery_already_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dim20"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt28"
                        tools:text="150,000.00" />

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:background="@color/global_text_gray2"
