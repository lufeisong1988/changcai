<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim10"
        android:background="@color/sea_gray"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dim20"
        android:paddingLeft="@dimen/dim40"
        android:paddingRight="@dimen/dim40"
        android:paddingTop="@dimen/dim40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_new_index_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每日焦点"
                android:textColor="@color/font_black"
                android:textSize="@dimen/txt36"
                 />

            <com.changcai.buyer.view.CustomFontTextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_new_index_group_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/icon_information_more"
                android:text="更多"
                android:textColor="@color/graph_bottom_line"
                android:textSize="@dimen/txt26" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>