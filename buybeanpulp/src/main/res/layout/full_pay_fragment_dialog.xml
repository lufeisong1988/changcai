<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sea_gray"
    android:orientation="vertical">


    <include
        layout="@layout/common_title_bar_pay"
        android:id="@+id/viewTop"
        />


    <com.changcai.buyer.view.CustomFontTextView
        style="@style/authenticate_style_left_title_text"
        android:paddingLeft="@dimen/dim40"
        android:paddingRight="@dimen/dim40"
        android:textColor="@color/membership_color"
        android:text="@string/please_input_recharge_money_password" />


    <EditText
        android:id="@+id/tv_pay_password"
        style="@style/loginItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim40"
        android:gravity="center|left"
        android:hint="@string/please_input_payment_password"
        android:inputType="textPassword"
        android:textColor="@color/global_text_gray"
        android:textColorHint="@color/storm_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/txt28" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim28"
        android:layout_marginRight="@dimen/dim28"
        android:background="@drawable/btn_shdo_blue110">

        <TextView
            android:id="@+id/tv_agree_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="确认全额付款"
            android:textColor="@color/white"
            android:textSize="@dimen/dim38" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.changcai.buyer.view.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/storm_gray"
            android:textSize="@dimen/txt30"
            android:text="忘记支付密码?" />

        <com.changcai.buyer.view.CustomFontTextView
            android:id="@+id/ctv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim20"
            android:text="点击这里找回密码"
            android:textColor="@color/global_blue"
            android:textSize="@dimen/txt30"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_inline_rgt"

            />
    </LinearLayout>

</LinearLayout>