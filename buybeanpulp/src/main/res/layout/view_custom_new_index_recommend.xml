<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim10"
        android:background="@color/sea_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dim40"
        android:paddingRight="@dimen/dim40"
        android:paddingTop="@dimen/dim50">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim15"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_home_recommend" />

            <com.changcai.buyer.view.CustomFontTextView
                android:id="@+id/tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/icon_information_more"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:text="行业日历"
                android:textColor="@color/graph_bottom_line"
                android:textSize="@dimen/txt26" />

            <com.changcai.buyer.view.CustomFontTextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim40"
                android:layout_toLeftOf="@+id/tv_event"
                android:ellipsize="end"
                android:gravity="right"
                android:lines="1"
                android:text="10月25日"
                android:textColor="@color/graph_bottom_line"
                android:textSize="@dimen/txt26" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_recommend"
            android:paddingTop="@dimen/dim10"
            android:paddingBottom="@dimen/dim10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</LinearLayout>