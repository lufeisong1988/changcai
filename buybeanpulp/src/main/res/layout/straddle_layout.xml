<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_strategy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dim10"
        android:layout_marginTop="@dimen/dim15"
        android:layout_marginRight="@dimen/dim15"
        android:layout_marginBottom="@dimen/dim50"
        android:orientation="vertical">

        <com.changcai.buyer.view.XListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim0"
            android:divider="@null"
            android:layout_marginBottom="@dimen/dim70"
            android:layout_weight="1" />

    </LinearLayout>

    <com.changcai.buyer.view.RotateDotsProgressView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/dim15"
        android:id="@+id/progressView"
        tools:visibility="visible"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dim10"
        android:layout_marginTop="@dimen/dim15"
        android:layout_marginBottom="@dimen/dim120"
        android:visibility="gone"
        />

    <com.changcai.buyer.view.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:drawableRight="@drawable/maidoupo_logl"
        android:gravity="center"
        android:paddingRight="@dimen/dim40"
        android:id="@+id/tv_explain"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dim30"
        android:text="本预测仅供参考，不为任何投资行为负责。"
        android:textColor="@color/gray_chateau"
        android:textSize="@dimen/txt24" />

</FrameLayout>