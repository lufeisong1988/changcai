<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/common_title_bar"
        ></include>

    <View
        android:id="@+id/view_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:layout_alignParentBottom="true"
        android:background="#DADADF" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_vip_list">
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_offline_info"
        android:background="#FFF6E0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim60"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="#D2D2DA"></LinearLayout>
        <TextView
            android:text="该顾问当前不在线，请线下联系或咨询其他顾问"
            android:textColor="#FF5500"
            android:textSize="@dimen/txt26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="#D2D2DA"></LinearLayout>
    </RelativeLayout>


</LinearLayout>