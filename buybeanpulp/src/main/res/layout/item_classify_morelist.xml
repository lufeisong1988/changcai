<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/moreitem_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim88"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dim40"
    android:background="@color/white"
    android:paddingRight="@dimen/dim40"
    tools:background="@color/aluminum">

    <com.changcai.buyer.view.CustomFontTextView
        android:id="@+id/moreitem_txt"
        android:layout_width="@dimen/dim0"
        android:layout_height="@dimen/dim88"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="全部分类"
        android:textSize="@dimen/dim26" />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon_inline_sel" />
</LinearLayout>