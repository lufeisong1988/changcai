<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/view_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim20"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim10"
            android:background="@color/sea_gray" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim20"
            android:paddingLeft="@dimen/dim40"
            android:paddingRight="@dimen/dim40"
            android:paddingTop="@dimen/dim40">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_new_index_group_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日焦点"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/txt36" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_new_index_group_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/icon_information_more"
                    android:text="更多"
                    android:textColor="@color/graph_bottom_line"
                    android:textSize="@dimen/txt26" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_new_index_child"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim160"
            android:layout_marginBottom="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_new_index_child_icon"
                android:layout_width="@dimen/dim160"
                android:layout_height="@dimen/dim160"
                android:layout_marginLeft="@dimen/dim40"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim20"
                android:paddingRight="@dimen/dim40">

                <TextView
                    android:id="@+id/tv_new_index_child_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="现货略周度交流会纪要：美豆震荡格局不"
                    android:textColor="@color/font_black"
                    android:textSize="@dimen/txt32" />

                <com.changcai.buyer.view.CustomFontTextView
                    android:id="@+id/tv_new_index_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_new_index_child_title"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dim1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="现货略周度交流会纪要：美豆震荡格局不"
                    android:textColor="@color/graph_bottom_line"
                    android:textSize="@dimen/txt26" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_new_index_child_classify"
                        android:layout_width="@dimen/dim96"
                        android:layout_height="@dimen/dim24"
                        tools:text="机构观点" />

                    <ImageView

                        android:id="@+id/iv_new_index_child_membership"
                        android:layout_width="@dimen/dim36"
                        android:layout_height="@dimen/dim23"
                        android:layout_marginLeft="@dimen/dim13" />

                    <com.changcai.buyer.view.CustomFontTextView
                        android:id="@id/tv_time"
                        style="@style/cms_list_item_bottom_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_bottom_child"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim20"
            android:orientation="horizontal"
            android:visibility="gone"></LinearLayout>
    </LinearLayout>
</LinearLayout>