<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_strategy" />
    <ImageView
        android:id="@+id/iv_watermark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/watermark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dim50"
        android:layout_marginLeft="@dimen/dim10"
        android:layout_marginRight="@dimen/dim15"
        android:layout_marginTop="@dimen/dim15"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.changcai.buyer.view.indicator.MagicIndicator
            android:id="@+id/prompt_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim90"
           />

        <com.changcai.buyer.view.XListView
            android:id="@+id/mListView"
            android:paddingTop="@dimen/dim21"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim0"
            android:layout_marginBottom="@dimen/dim70"
            android:layout_weight="1"
            android:scrollbars="none"
            android:divider="@null" />
    </LinearLayout>

    <com.changcai.buyer.view.RotateDotsProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dim15"
        android:layout_marginRight="@dimen/dim15"
        tools:visibility="visible"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dim141"
        android:layout_marginTop="@dimen/dim105" />

    <com.changcai.buyer.view.CustomFontTextView
        android:id="@+id/tv_declare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dim30"
        android:drawableRight="@drawable/maidoupo_logl"
        android:gravity="center"
        android:paddingRight="@dimen/dim40"
        android:text="本预测仅供参考，不为任何投资行为负责。"
        android:textColor="@color/gray_chateau"
        android:textSize="@dimen/txt24" />

    <com.changcai.buyer.view.AutoEmptyView
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/autoEmptyView">

    </com.changcai.buyer.view.AutoEmptyView>
    <com.changcai.buyer.ui.strategy.LevelJudgementView
        android:visibility="gone"
        android:id="@+id/levelJudgementView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.changcai.buyer.ui.strategy.LevelJudgementView>
</FrameLayout>