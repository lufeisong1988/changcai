<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/deliveryPlace"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dim52"
        android:paddingRight="@dimen/dim40"
        android:orientation="horizontal">

        <com.changcai.buyer.view.CustomFontTextView
            android:id="@+id/deliveryPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提货地点"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/select_price"
            android:textSize="@dimen/dim26" />

        <ImageView
            android:id="@+id/deliveryPlaceArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_inline_down" />
    </LinearLayout>


    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/mischka" />


    <LinearLayout
        android:id="@+id/proteinPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dim40"
        android:paddingRight="@dimen/dim40"
        android:orientation="horizontal">

        <com.changcai.buyer.view.CustomFontTextView
            android:id="@+id/proteinPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_filtrate"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/select_price"
            android:textSize="@dimen/dim26" />

        <ImageView
            android:id="@+id/proteinPriceArrow"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_height="wrap_content"
            android:src="@drawable/icon_inline_down" />
    </LinearLayout>

</LinearLayout>