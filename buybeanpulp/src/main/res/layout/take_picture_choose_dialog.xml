<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparents"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_dimen_10"
    android:paddingRight="@dimen/common_dimen_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quoto_phone_normal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/identity_camera"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dim36"
            android:paddingRight="@dimen/dim47"
            android:text="@string/take_picture_from_camera"
            android:textColor="@color/black"
            android:textSize="@dimen/txt40" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim1"
            android:alpha="70"
            android:background="@color/color_4d" />

        <TextView
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/identity_photo"
            android:gravity="center|left"
            android:paddingLeft="@dimen/dim36"
            android:paddingRight="@dimen/dim47"
            android:text="@string/gallery"
            android:textColor="@color/black"
            android:textSize="@dimen/txt40" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimen_10" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="@dimen/common_dimen_10"
        android:background="@drawable/quoto_phone_normal"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/global_blue"
        android:textSize="@dimen/txt40" />
</LinearLayout>