<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lily_white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim34"
    android:paddingRight="@dimen/dim34">

    <TextView
        android:id="@+id/tv_is_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim40"
        android:text="@string/set_pay_password2"
        android:textColor="@color/black"
        android:textSize="@dimen/txt34" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim77"
        android:gravity="center_vertical"
        android:text="@string/payment_limited_info"
        android:textColor="@color/global_text_gray"
        android:textSize="@dimen/txt30" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/dim40"
        android:orientation="vertical">

        <EditText
            android:id="@+id/cet_payment_password"
            style="@style/loginItemLayout"
            android:cursorVisible="true"
            android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:hint="@string/please_input_payment_password"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="16"
            android:textColor="@color/black"
            android:textColorHint="@color/global_text_gray2"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/mediumTextSize" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dim20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cet_payment_password_confirm"
                style="@style/loginItemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:cursorVisible="true"
                android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:hint="@string/please_input_payment_password_again"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/global_text_gray2"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/mediumTextSize" />

            <LinearLayout
                android:id="@+id/ll_iv_password_parent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dim20"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/iv_password_visibility"
                    android:layout_width="@dimen/dim44"
                    android:layout_height="@dimen/dim25"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_password_selector" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_set_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim80"
        android:background="@drawable/confirm_assign_bg"
        android:gravity="center"
        android:text="@string/accomplish"
        android:textColor="@color/white"
        android:textSize="@dimen/dim38" />
</LinearLayout>