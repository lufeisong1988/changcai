<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_full_pay_result"
        android:layout_width="@dimen/dim68"
        android:layout_height="@dimen/dim68"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginTop="@dimen/dim40"
        android:src="@drawable/result_level_list" />

    <TextView

        android:id="@+id/tv_full_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_full_pay_result"
        android:layout_marginLeft="@dimen/dim12"
        android:layout_marginRight="@dimen/dim40"
        android:layout_toRightOf="@+id/iv_full_pay_result"
        android:textColor="@color/membership_color"
        android:textSize="@dimen/txt58"
        tools:text="付款成功！" />

    <com.changcai.buyer.view.CustomFontTextView
        android:id="@+id/ctv_pay_result_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_full_pay_result"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginTop="@dimen/dim85"
        android:textColor="@color/storm_gray"
        android:textSize="@dimen/txt30"
        tools:text="现在订单为担保付，保证金和货款都保留在买豆粕网，您确认收货后，才打给卖家。" />

    <com.changcai.buyer.view.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ctv_pay_result_content"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginTop="@dimen/dim80"
        android:drawableRight="@drawable/icon_inline_rgt"
        android:text="查看订单详情"
        android:id="@+id/ctv_pay_action"
        android:textColor="@color/global_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_shdo_blue110"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pay_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim43"
            android:text="确认下单"
            android:textColor="@color/white"
            android:textSize="@dimen/txt40" />
    </LinearLayout>
</RelativeLayout>