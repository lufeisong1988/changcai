<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/multi_menu_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <View
        android:id="@+id/top_view_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim484"
        android:background="@color/white"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_level1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:divider="@color/global_text_gray2"
            android:dividerHeight="@dimen/dim1"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false"
            android:scrollbars="none" />

        <View
            android:layout_width="@dimen/dim1"
            android:layout_height="match_parent"
            android:background="@color/global_text_gray2" />

        <ListView
            android:id="@+id/lv_level2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:divider="@color/global_text_gray2"
            android:dividerHeight="@dimen/dim1"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="false" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/global_text_gray2" />

    <View
        android:id="@+id/view_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />
</LinearLayout>