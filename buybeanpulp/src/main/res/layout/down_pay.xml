<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/_ll_count_down"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim72"
            android:background="@color/orange_details_info2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/_tv_please"
                style="@style/style0"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:text="@string/please"
                android:textSize="@dimen/txt30" />

            <com.changcai.buyer.view.countdowntextview.CountDownTextView
                android:id="@+id/_tv_count_down"
                style="@style/style1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/txt30"
                tools:text="06时00分00秒" />

            <TextView
                android:id="@+id/_tv"
                style="@style/style0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/down_pay_money"
                android:textSize="@dimen/txt30" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/global_text_gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/string_seller"
                android:textSize="@dimen/txt34" />


            <TextView
                android:id="@+id/_tv_seller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt34"
                tools:text="sdfsdf" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim20"
            android:background="@color/global_text_gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_units1"
                android:textSize="@dimen/txt34" />


            <TextView
                android:id="@+id/_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt34"
                tools:text="sdfsdf" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim20"
            android:background="@color/global_text_gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_ton_units2"
                android:textSize="@dimen/txt34" />


            <TextView
                android:id="@+id/_tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/txt34"
                tools:text="sdfsdf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim20"
            android:background="@color/global_text_gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dim24"
            android:paddingRight="@dimen/dim24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="定金"
                android:textSize="@dimen/txt34" />


            <TextView
                android:id="@+id/_tv_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/flamingo"
                android:textSize="@dimen/txt34"
                tools:text="sdfsdf" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/global_text_gray2" />

        <include layout="@layout/pay_common"/>
    </LinearLayout>
</ScrollView>