<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical"
    >


    <include
        android:id="@+id/viewTop"
        layout="@layout/common_title_bar" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/computer_operation_text"
        android:textSize="16sp"
        android:layout_marginTop="@dimen/common_margin_20"
        android:textColor="@color/global_text_gray"
        android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/computer_operation_message"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/common_margin_20"
        android:textColor="@color/global_text_gray"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_20"
        android:layout_gravity="center"
        android:background="@mipmap/computer_operation_icon"
        />


</LinearLayout>
