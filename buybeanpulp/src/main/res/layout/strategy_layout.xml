<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical">

    <com.changcai.buyer.view.indicator.MagicIndicator
        android:id="@+id/navigation_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim240"
         />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:layout_below="@+id/navigation_indicator"
        android:background="@color/color_E7E7E7"></View>

    <com.changcai.buyer.view.CustomViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@android:color/darker_gray" />

    <com.changcai.buyer.view.RotateDotsProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dim141"
        android:layout_marginLeft="@dimen/dim15"
        android:layout_marginRight="@dimen/dim15"
        android:background="@color/white"
        android:visibility="gone" />

</RelativeLayout>