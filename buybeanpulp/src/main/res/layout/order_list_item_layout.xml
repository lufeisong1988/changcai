<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <View style="@style/divide_line_all" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dim81"
            android:layout_height="@dimen/dim57"
            tools:src="@drawable/icon_seller_initiated"
            android:src="@drawable/icon_seller_order_list" />

        <TextView
            android:id="@+id/tv_enter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim8"
            android:lines="1"
            android:layout_gravity="center_vertical"
            android:text="@string/about_app"
            android:textColor="@color/sticky_header_text_color"
            android:textSize="@dimen/txt30" />

        <TextView
            android:id="@+id/tv_status_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim20"
            android:layout_alignParentRight="true"
            android:ellipsize="middle"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:lines="1"
            android:text="订单状态"
            android:textColor="@color/global_blue"
            android:textSize="@dimen/SmallTextSize"
            app:layout_widthPercent="35%"
            tools:text="待买家支付保证金" />
    </LinearLayout>

    <View
        style="@style/divide_line_all"
        android:layout_marginBottom="@dimen/common_dimen_10"
        android:layout_marginLeft="@dimen/dim20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dim20"
        android:paddingRight="@dimen/dim20">


        <TextView
            android:id="@+id/tv_price_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            app:layout_widthPercent="40%"

            tools:text="sdfsdfsdfsdfsdfsdfsdfssdf" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_price_info"
            android:gravity="right"

            android:text="单价:"
            android:textColor="@color/black"
            android:textSize="@dimen/txt26"
            android:textStyle="bold"
            app:layout_widthPercent="60%"
            tools:text="单价：M1705+s217" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_price"
            android:layout_marginTop="@dimen/dim16"
            android:textColor="@color/global_text_gray"
            android:textSize="@dimen/txt26"
            tools:text="2016-12-01至2016-12-31" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_time"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_time"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/SmallTextSize"
            android:textStyle="bold"
            app:layout_widthPercent="30%"
            tools:text="数量：100.00" />

        <TextView
            android:id="@+id/tv_regionAndLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_marginTop="@dimen/dim16"
            android:textColor="@color/global_text_gray"
            android:textSize="@dimen/txt26"
            android:layout_marginBottom="@dimen/dim24"
            tools:text="交货地点:  安徽 蚌埠徽商码头" />


    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_line"
        style="@style/divide_line_all"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginTop="@dimen/common_dimen_10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_regionAndLocation"
        android:id="@+id/rl_buttons_status"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_earnest"
            android:textSize="@dimen/txt26"
            tools:text="我擦哦哦迪欧防静电"
            android:layout_margin="@dimen/dim20"
            android:layout_centerVertical="true"
            android:textColor="@color/sticky_header_text_color"
            />

        <TextView
            android:id="@+id/tv_status_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dim20"
            android:layout_marginRight="@dimen/dim20"
            android:layout_marginTop="@dimen/dim20"
            android:background="@drawable/order_status_bg"
            android:ellipsize="end"
            android:lines="1"
            android:maxWidth="@dimen/dim200"
            android:padding="@dimen/common_margin_5"
            android:textColor="@color/global_text_orange"
            android:textSize="@dimen/txt26"
            tools:text="签署合同" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim1"
        android:background="@color/global_text_gray2" />
</LinearLayout>