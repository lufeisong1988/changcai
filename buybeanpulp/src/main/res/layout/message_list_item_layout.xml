<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical"
    >

    <View
        style="@style/divide_line_all"
        android:layout_marginBottom="@dimen/common_dimen_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/common_dimen_10"
        android:paddingRight="@dimen/common_dimen_10"
        android:layout_marginTop="@dimen/common_margin_2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/BasicTextSize"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/global_text_gray"
            android:textSize="@dimen/SmallerTextSize"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/common_margin_2"
        android:paddingLeft="@dimen/common_dimen_10"
        android:paddingRight="@dimen/common_dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin_2"
            android:textColor="@color/global_text_gray"
            android:textSize="@dimen/SmallTextSize"/>


        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="right"
            android:src="@mipmap/my_order_arrow"/>

    </RelativeLayout>

    <View
        style="@style/divide_line_all"
        android:layout_marginTop="@dimen/common_dimen_10"
        />
</LinearLayout>