<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/cF7F7F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim124"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recharge_status"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
           />

        <TextView
            android:id="@+id/tv_recharge_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim20"
            android:textSize="@dimen/txt42"
            tools:text="@string/recharge_ing" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_recharge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim64"
        android:text="充值金额：80000000元"
        android:textColor="@color/global_text_gray3"
        android:textSize="@dimen/dim42" />

    <TextView
        android:id="@+id/tv_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/dim20"
        android:text="@string/recharge_waiting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim100"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_check_my_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recharge_bg"
            android:gravity="center"
            android:text="@string/check_my_property"
            android:textColor="@color/global_blue" />

        <TextView
            android:id="@+id/tv_check_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim60"
            android:background="@drawable/recharge_bg"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/check_my_order"
            android:textColor="@color/global_blue"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>