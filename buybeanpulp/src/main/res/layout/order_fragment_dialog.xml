<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:id="@+id/ll_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/window_pay_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim75"
        android:layout_marginRight="@dimen/dim75"
        android:orientation="vertical">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/iv_order_status"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim318"
            android:layout_alignParentTop="true"
             />

        <ImageView
            android:id="@+id/iv_order_cancel"
            android:layout_width="@dimen/dim50"
            android:layout_height="@dimen/dim50"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dim18"
            android:layout_marginTop="@dimen/dim18"
            android:src="@drawable/window_icon_cancel_order" />


        <TextView
            android:layout_marginTop="@dimen/dim56"
            android:layout_marginLeft="@dimen/dim80"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:layout_below="@+id/iv_order_status"
            android:textSize="@dimen/txt30"
            android:textColor="@color/global_text_gray"
            tools:text="四海"
            />

        <TextView
            android:layout_marginTop="@dimen/dim26"
            android:layout_marginLeft="@dimen/dim80"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tons"
            android:layout_below="@+id/tv_name"
            android:textSize="@dimen/txt30"
            android:textColor="@color/global_text_gray"
            tools:text="吨"
            />

        <TextView
            android:layout_marginTop="@dimen/dim26"
            android:layout_marginLeft="@dimen/dim80"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:layout_below="@+id/tv_tons"
            android:textSize="@dimen/txt30"
            android:textColor="@color/global_text_gray"
            tools:text="单价"
            />

        <TextView
            android:layout_marginTop="@dimen/dim26"
            android:layout_marginLeft="@dimen/dim80"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_intro"
            android:layout_below="@+id/tv_price"
            android:textSize="@dimen/txt30"
            android:textColor="@color/global_text_gray"
            tools:text="四海"
            android:layout_marginBottom="@dimen/dim60"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/black"
            android:alpha="0.25"
            android:layout_below="@id/tv_order_intro"
            />
        <LinearLayout
            android:layout_below="@+id/tv_order_intro"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim108"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="@dimen/dim0"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cancel"
                android:layout_weight="1"
                android:text="@string/handle_later"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/txt34"
                android:textColor="@color/global_text_gray"
                />

            <View
                android:layout_width="@dimen/dim1"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:alpha="0.25"
                />

            <TextView
                android:textColor="@color/global_blue"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="@dimen/dim0"
                android:textSize="@dimen/txt34"
                android:layout_height="wrap_content"
                android:id="@+id/tv_confirm"
                tools:text="you have foolish nis shisbdifosdifsdifosdifosdifosdifosdifoidd"
                />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>